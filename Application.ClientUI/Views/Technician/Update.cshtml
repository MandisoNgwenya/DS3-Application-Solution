@model IEnumerable<Application.ClientUI.Models.DeviceModel>


<div class="row">
    <div class="form-group col-md-5">





        @using (Html.BeginForm())
        {
            <div class="form-group has-feedback">
                <label for="search" class="sr-only">Search</label>
                <button type="submit" class="btn btn-primary active"><span class="glyphicon glyphicon-search " aria-hidden="true"></span></button>



                <div class="col-md-10">
                    @Html.TextBox("searchString", null, new { @class = "form-control", @placeholder = " Enter Device Serial Number" })
                </div>

            </div>





        }
    </div>
</div>




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.serialNo)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.customerIdNumber)
        </th>
        
    

  
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>






        <th>



        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class=" active  table-bordered active alert-info">
                @Html.DisplayFor(modelItem => item.serialNo)
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.customerIdNumber)
            </td>
          
         

      
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.ActionLink("Update Status", "Status", new { id = item.id }) |
           
            </td>
        </tr>
    }

</table>

